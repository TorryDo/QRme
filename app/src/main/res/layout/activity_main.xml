<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#33000000"

    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="400dp"

        android:layout_margin="10dp"
        android:elevation="1dp"
        android:theme="@style/Theme.QRme"
        app:cardCornerRadius="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="QR value"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/backicon"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:textColorHighlight="@color/purple_200"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/backicon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"

                android:layout_marginStart="15dp"
                android:padding="6dp"

                android:src="@drawable/ic_left_arrow"
                app:layout_constraintBottom_toBottomOf="@id/edittext_layout"
                app:layout_constraintEnd_toStartOf="@id/edittext_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/edittext_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_paste"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"

                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_square_button"
                android:backgroundTint="@color/grey"
                android:text="Paste"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="@id/edittext_layout"
                app:layout_constraintTop_toBottomOf="@id/edittext_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"

                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_square_button"
                android:backgroundTint="@color/grey"
                android:text="Clear"
                android:textColor="@color/black"

                app:layout_constraintStart_toEndOf="@id/button_paste"
                app:layout_constraintTop_toBottomOf="@id/edittext_layout" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_paste" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>